{
  "manifest_version": 2,
  "name": "Chrome Text Stash",
  "short_name": "Chrome Text Stash",
  "version": "#version#",
  "description": "#description#",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_action": {
    "default_popup": "index.html"
  },
  "background": {
    "scripts": ["scripts/events.js"],
    "persistent": false
  },
  "author": "Mohammed Ismail Ansari <team.terminal@gmail.com>",
  "permissions": [
    "activeTab",
    "contextMenus",
    "storage"
  ]
}
